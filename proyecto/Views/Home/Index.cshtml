@{
    ViewBag.Title = "Home Page";
}

<div class="container" style="background-color: #f8f9fa; border-radius: 10px; box-shadow: 0 2px 6px rgba(0,0,0,0.1); font-size: 14px; margin-bottom:30px">
    <h1 class="page-header">Dashboard</h1>
    <p class="text-muted">Bienvenido de nuevo</p>

    <div class="row">
        <div class="col-sm-6 col-md-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h4>Total Auditorías</h4>
                    <h2 class="text-success"><strong>24</strong></h2>
                    @*<small class="text-success">+2 desde el mes pasado</small>*@
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h4>En Progreso</h4>
                    <h2 class="text-warning"><strong>7</strong></h2>
                    @*<small class="text-danger">-1 desde el mes pasado</small>*@
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h4>Completadas</h4>
                    <h2 class="text-info"><strong>15</strong></h2>
                    @*<small class="text-success">+3 desde el mes pasado</small>*@
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h4>Hallazgos Realizados</h4>
                    <h2 class="text-danger"><strong>9</strong></h2>
                    @*<small class="text-danger">+2 desde el mes pasado</small>*@
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong>Auditorías Recientes</strong><br>
                    <small>Resumen de las actividades de auditoría más recientes</small>
                </div>
                <div class="panel-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Auditoría</th>
                                <th>Estado</th>
                                <th>Progreso</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Auditoría de Seguridad TI</td>
                                <td>
                                    <span class="label" style="background-color: #f1c40f;">En Progreso</span>
                                </td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar" style="width: 50%; background-color: #000;"></div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>Controles Financieros</td>
                                <td>
                                    <span class="label" style="background-color: #2ecc71;">Completada</span>
                                </td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar" style="width: 100%; background-color: #000;"></div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>Revisión de Cumplimiento</td>
                                <td>
                                    <span class="label" style="background-color: #3498db;">Pendiente</span>
                                </td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar" style="width: 0%; background-color: #000;"></div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>Auditoría Operativa</td>
                                <td>
                                    <span class="label" style="background-color: #f1c40f;">En Progreso</span>
                                </td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar" style="width: 70%; background-color: #000;"></div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading"><strong>Hallazgos por Tipo</strong></div>
                <div class="panel-body text-center">
                    <p class="text-muted">Número de hallazgos totales</p>
                    <div class="well well-sm">
                        <p>Gráfico de Tendencia de Hallazgos</p>
                        @*<small>Últimos 6 meses</small>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
