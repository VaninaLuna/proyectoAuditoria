@model proyecto.DTOs.ProfileDTO

@{
    ViewBag.Title = "Profile";
}

<style>
    input[readonly] {
        background-color: #f5f5f5;
        border: 1px solid #ccc;
        color: #555;
        cursor: not-allowed;
    }
</style>


<div class="container" style="background-color: #f8f9fa; padding: 30px; border-radius: 10px; box-shadow: 0 2px 6px rgba(0,0,0,0.1); font-size: 14px; margin-top: 30px;margin-bottom:30px">
    <h2 class="text-center my-4"><strong>Perfil de usuario</strong></h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            @if (Model.UserRol != "Administrador")
            {
                <div class="form-group">
                    <label class="col-md-1">Legajo</label>
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.FileNumber, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.FileNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-1">Fecha de alta</label>
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.StartDateString, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.StartDateString, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-1">Estado</label>
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.Status, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>
            }

            <div class="form-group">
                <label class="col-md-1">Rol</label>
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.UserRol, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.UserRol, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-1">Nombre de usuario</label>
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-1">Email</label>
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.UserEmail, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    }

    <div class="mt-4 text-left">
        <a href="@Url.Action("Index", "Home")" class="btn btn-warning btn-sm">Volver al dashboard</a>
    </div>
</div>
    <script src="~/Scripts/jquery-2.2.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
